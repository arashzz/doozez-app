<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_methods_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="17dp"
    android:layout_marginVertical="4dp"
    android:paddingHorizontal="16dp"
    android:paddingBottom="20dp"
    android:paddingTop="10dp"
    android:background="@drawable/shape_list_item">

    <TextView
        android:id="@+id/payment_methods_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/payment_methods_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_methods_item_name"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="@tools:sample/cities" />

    <com.doozez.doozez.ui.view.PaymentMethodStatusCustomView
        android:id="@+id/payment_methods_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/payment_methods_item_name"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/opensans_regular"
        tools:text="@tools:sample/lorem" />

</RelativeLayout>
