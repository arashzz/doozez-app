<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_search_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/user_search_item_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_account_circle_36"
        android:padding="16dp" />

    <TextView
        android:id="@+id/user_search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/user_search_item_avatar"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_regular"
        tools:text="@tools:sample/cities"  />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/user_search_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="@string/action_add"
        style="?attr/borderlessButtonStyle"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_regular"
        android:layout_gravity="center_vertical|center_horizontal" />
</RelativeLayout>

