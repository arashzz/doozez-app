<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/safe_detail_participant_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/safe_detail_participant_item_sequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:paddingHorizontal="5dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/safe_detail_participant_item_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_round_account_circle_36"
        android:layout_toEndOf="@+id/safe_detail_participant_item_sequence" />

    <TextView
        android:id="@+id/safe_detail_participant_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/safe_detail_participant_item_avatar"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/safe_detail_participant_item_winner"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/mtrl_list_item_tint" />

    <ImageView
        android:id="@+id/safe_detail_participant_item_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_attach_money_24_green"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:padding="16dp" />

</RelativeLayout>
