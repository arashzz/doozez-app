<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/safe_detail_invite_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="64dp">

    <ImageView
        android:id="@+id/safe_detail_invite_item_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_account_circle_36"
        android:padding="16dp" />

    <TextView
        android:id="@+id/safe_detail_invite_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/safe_detail_invite_item_avatar"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_regular"
        tools:text="@tools:sample/cities" />

    <ImageView
        android:id="@+id/safe_detail_invite_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_delete_24"
        android:padding="16dp" />

    <com.doozez.doozez.ui.view.InvitationStatusCustomView
        android:id="@+id/safe_detail_invite_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/opensans_regular"
        tools:text="@tools:sample/lorem" />

</RelativeLayout>
