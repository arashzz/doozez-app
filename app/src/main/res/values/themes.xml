<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dooz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/doozez_purple</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/secondary_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.Dooz.TextView.Style</item>
        <item name="android:editTextStyle">@style/Theme.Dooz.EditText.Style</item>
    </style>

    <style name="Theme.Dooz.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dooz.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation" tools:targetApi="lollipop">0dp</item>
        <item name="colorControlNormal">@color/doozez_purple</item>
        <item name="android:textColor">@color/doozez_purple</item>
        <item name="android:actionMenuTextColor">@color/doozez_purple</item>
        <item name="actionBarStyle">@style/Theme.Dooz.ActionBar</item>
    </style>

    <style name="Theme.Dooz.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation" tools:targetApi="lollipop">0dp</item>
        <item name="colorControlNormal">@color/doozez_purple</item>
        <item name="android:textColor">@color/doozez_purple</item>
        <item name="android:actionMenuTextColor">@color/doozez_purple</item>
        <item name="actionBarStyle">@style/Theme.Dooz.ActionBar</item>
    </style>

    <style name="Theme.Dooz.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Theme.Dooz.TextView.Style" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Theme.Dooz.EditText.Style" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

</resources>