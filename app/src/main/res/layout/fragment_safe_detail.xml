<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/safe_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.safe.SafeDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/safe_detail_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardCornerRadius="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/safe_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:id="@+id/safe_detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/safe_detail_name"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/safe_detail_monthly_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        />

                    <TextView
                        android:id="@+id/safe_detail_total_invites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/safe_detail_payment_method_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/safe_detail_payment_method_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_credit_card_36"
                        android:layout_alignParentStart="true"
                        android:layout_margin="8dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="Payment Method" />

                    <TextView
                        android:id="@+id/safe_detail_payment_method_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/safe_detail_payment_method_icon"
                        android:enabled="false"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/safe_detail_user_list"
            android:name="com.doozez.doozez.ui.safe.SafeDetailFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.safe.SafeDetailFragment" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/safe_detail_user_list"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/safe_detail_leave"
            android:src="@drawable/ic_baseline_close_24"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/safe_detail_cancel"
            android:src="@drawable/ic_baseline_close_24"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/safe_detail_start"
            android:src="@drawable/ic_baseline_check_24"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/safe_detail_add_invite"
            android:src="@drawable/ic_baseline_person_add_24"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
